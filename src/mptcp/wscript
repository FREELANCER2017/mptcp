# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('mptcp', ['core', 'internet', 'stats'])
    module.source = [
        'model/mptcp.cc',
        'helper/mptcp-helper.cc',
        'model/mp-tcp-header.cc',                
        'model/mp-tcp-l4-protocol.cc',           
        #'model/mp-tcp-socket-base.cc',           
        #'model/mp-tcp-typedefs.cc',              
        ]

    module_test = bld.create_ns3_module_test_library('mptcp')
    module_test.source = [
        'test/mptcp-test-suite.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'mptcp'
    headers.source = [
        'model/mptcp.h',
        'helper/mptcp-helper.h',
        'model/mp-tcp-header.h',
        'model/mp-tcp-l4-protocol.h',  
        #'model/mp-tcp-socket-base.h',  
        #'model/mp-tcp-typedefs.h',     
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

